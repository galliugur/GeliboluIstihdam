@{
    ViewData["Title"] = "Home Page";

}


<!-- Employee Login Modal -->
<div class="modal fade" id="employeeLoginModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">İş Arayan Olarak Giriş Yap</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Login Form -->
                <form asp-area="Employee" asp-controller="Account" asp-action="Logon" method="post" id="employeeLoginForm" class="mt-5 mb-5">
                    <div class="mb-3">
                        <label for="emailEmployee" class="text-light form-label">E-posta</label>
                        <input type="email" class="form-control" id="emailEmployee" name="email" placeholder="E-posta adresinizi girin" required>
                    </div>

                    <label for="passwordEmployee" class="text-light form-label">Şifre</label>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control password-input" id="passwordEmployee" name="password" placeholder="Şifrenizi girin" required>
                        <button type="button" class="btn btn-togglePassword" data-target="passwordEmployee">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>

                    <div class="d-flex gap-2 d-md-flex mb-2 justify-content-between align-items-center">
                        <button type="submit" class="btn btn-gradient-m w-100 w-md-auto">Giriş Yap</button>
                        <button class="btn btn-gradient-m d-flex align-items-center w-100 w-md-auto">
                            <img src="~/assets/img/edev.png" alt="E-Devlet Logo" class="button-logo me-2" style="max-width: 20px; height: auto;">
                            E-Devlet ile Giriş
                        </button>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="#" class="text-light">Şifremi Unuttum</a>
                        <a href="#" class="text-light reset-form" data-form-id="employeeLoginModal" style="text-decoration: underline;">Temizle</a>
                    </div>
                </form>
                <!-- End Login Form -->
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<!-- End Employee Login Modal -->
<!-- Employee Register Modal -->
<div class="modal fade" id="employeeRegisterModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">İş Arayan Olarak Üye Ol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Register Form -->
                <form asp-area="Employee" asp-controller="Account" asp-action="Register" method="post" id="employeeRegisterForm">
                    <div class="mb-3">
                        <label for="firstNameEmployee" class="text-light form-label">Ad</label>
                        <input type="text" class="form-control" id="firstNameEmployee" name="firstName" placeholder="Adınızı girin" required>
                    </div>

                    <div class="mb-3">
                        <label for="lastNameEmployee" class="text-light form-label">Soyad</label>
                        <input type="text" class="form-control" id="lastNameEmployee" name="lastName" placeholder="Soyadınızı girin" required>
                    </div>

                    <div class="mb-3">
                        <label for="phoneEmployee" class="text-light form-label">Telefon</label>
                        <input type="tel" class="form-control phone-mask" id="phoneEmployee" name="phone" placeholder="0 (5__) ___ ____" required>
                    </div>

                    <div class="mb-3">
                        <label for="emailEmployeeRegister" class="text-light form-label">E-posta</label>
                        <input type="email" class="form-control" id="emailEmployeeRegister" name="email" placeholder="E-posta adresinizi girin" required>
                    </div>

                    <!-- Şifre -->
                    <label for="passwordEmployeeRegister" class="text-light form-label">Şifre</label>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control password-input" id="passwordEmployeeRegister" name="passwordEmployeeRegister" placeholder="Şifrenizi girin">
                        <button type="button" class="btn btn-togglePassword" data-target="passwordEmployeeRegister">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <!-- Şifre Güçlülük Göstergesi -->
                    <div class="progress mb-1">
                        <!-- Daha az boşluk için mb-1 -->
                        <div id="passwordStrengthBar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small id="passwordStrengthText" class="text-light d-block mt-1"></small> <!-- Yazıyı alta aldı -->
                    <!-- Şifre Tekrar -->
                    <label for="confirmPasswordEmployeeRegister" class="text-light form-label">Şifre Tekrar</label>
                    <!-- Şifre -->
                    <div class="input-group mb-3">
                        <input type="password" class="form-control password-input" id="confirmPasswordEmployeeRegister" placeholder="Şifrenizi tekrar girin">
                        <button type="button" class="btn btn-togglePassword" data-target="confirmPasswordEmployeeRegister">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <!-- Şifre Uyum Kontrolü -->
                    <small id="passwordMatchText" class="text-danger d-none">Şifreler uyuşmuyor!</small>

                    <div class="d-flex gap-2 d-md-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-gradient-m w-100 w-md-auto">Kayıt Ol</button>
                        <button class="btn btn-gradient-m d-flex align-items-center w-100 w-md-auto">
                            <img src="~/assets/img/edev.png" alt="E-Devlet Logo" class="button-logo me-2" style="max-width: 20px; height: auto;">
                            E-Devlet ile Kayıt
                        </button>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="#" class="text-light" data-bs-toggle="modal" data-bs-target="#employeeLoginModal">Zaten Bir Hesabım Var</a>
                        <a href="#" class="text-light reset-form" data-form-id="employeeRegisterModal" style="text-decoration: underline;">Temizle</a>
                    </div>
                </form>
                <!-- End Register Form -->
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<!-- End Employee Register Modal -->
<!-- Employer Login Modal-->
<div class="modal fade" id="employerLoginModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">İş Veren Olarak Giriş Yap</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Login Form -->
                <form asp-action="employerLogin" asp-controller="Home" method="post" class="mt-5 mb-5">
                    <div class="mb-3">
                        <label for="emailEmployer" class="text-light form-label">E-posta</label>
                        <input type="email" class="form-control" id="emailEmployer" name="email" placeholder="E-posta adresinizi girin" required>
                    </div>
                    <label for="passwordEmployer" class="text-light form-label">Şifre</label>

                    <div class="input-group mb-3">
                        <input type="password" class="form-control password-input" id="passwordEmployer" name="password" placeholder="Şifrenizi girin">
                        <button type="button" class="btn btn-togglePassword" data-target="passwordEmployer">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>

                    <div class="d-flex gap-2 d-md-flex justify-content-between align-items-center">
                        <!-- Giriş Yap Butonu -->
                        <button type="submit" class="btn btn-gradient-m w-100 w-md-auto">Giriş Yap</button>
                        <!-- E-Devlet ile Giriş Butonu -->
                        <button class="btn btn-gradient-m d-flex align-items-center w-100 w-md-auto">
                            <img src="~/assets/img/edev.png" alt="E-Devlet Logo" class="button-logo me-2" style="max-width: 20px; height: auto;">
                            E-Devlet ile Giriş
                        </button>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="#" class="text-light">Şifremi Unuttum</a>
                        <a href="" class="text-light reset-form" data-form-id="employerLoginModal" style="text-decoration: underline;">Temizle</a>
                    </div>
                </form>
                <!-- End Login Form -->
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<!-- End Employer Login Modal-->



<div class="row g-4 mt-2">
    <!-- İş Arayanlar İçin -->
    <div class="col-md-6 col-12">
        <div class="bg-white p-4 rounded shadow">
            <h2 class="h5 mb-4">İş Arayanlar İçin</h2>
            <p class="mb-4">
                Artık iş arama sürecinizi kolaylaştırın! Özgeçmişinizi oluşturun veya yükleyin, yeteneklerinizi tanıtın, hayalinizdeki işe bir adım daha yaklaşın.
            </p>
            <div class="d-flex align-items-center mb-4">
                <img alt="İş ilanları simgesi" class="me-4" src="~/assets/img/tabler--briefcase.png" />
                <div>
                    <p class="fw-bold">Binlerce İş İlanı</p>
                    <p>Her gün güncellenen geniş iş fırsatları yelpazesi</p>
                </div>
            </div>

            <div class="center-buttons">
                <button type="button" class="btn-gradient" data-bs-toggle="modal" data-bs-target="#employeeLoginModal" data-modal-title="İş Arayan Girişi">GİRİŞ YAP</button>
                <button type="button" class="btn-gradient" data-bs-toggle="modal" data-bs-target="#employeeRegisterModal" data-modal-title="İş Arayan Üye Ol">ÜYE OL</button>
            </div>
        </div>
    </div>

    <!-- İşverenler İçin -->
    <div class="col-md-6 col-12">
        <div class="bg-white p-4 rounded shadow">
            <h2 class="h5 mb-4">İşverenler İçin</h2>
            <p class="mb-4">
                Doğru yetenekleri bulmak hiç bu kadar kolay olmamıştı. Sistemimize kayıt olun, iş ilanlarınızı yayınlayın ve size uygun çalışanları hızlıca keşfedin.
            </p>
            <div class="d-flex align-items-center mb-4">
                <img alt="Aday havuzu simgesi" class="me-4" src="/assets/img/f7--person-3.png" />

                <div>
                    <p class="fw-bold">Geniş Aday Havuzu</p>
                    <p>Nitelikli adaylarla hızlı ve etkili bir şekilde bağlantı kurun</p>
                </div>
            </div>
            <div class="center-buttons">
                <button type="button" class="btn-gradient" data-bs-toggle="modal" data-bs-target="#employerLoginModal" data-modal-title="İş Veren Girişi">GİRİŞ YAP</button>
                <button class="btn-gradient" onclick="window.location.href='/Employer/Account/Register'">ÜYE OL</button>
            </div>
        </div>
    </div>
</div>

<!-- Belediye Misyonu -->
<div class="bg-white p-4 rounded shadow mt-4 text-center">
    <h2 class="h5 mb-4">Belediye Olarak Misyonumuz</h2>
    <p>
        Şehrimizdeki işsizlik oranını düşürmek ve işverenlerle iş arayanları buluşturmak için modern bir platform sunuyoruz. İster yeni bir kariyere adım atıyor olun, ister ekibinizi büyütmek istiyor olun, buradayız!
    </p>
</div>
