@model GeliboluIstihdam.Areas.Employer.Models.RegisterViewModel
@{
    ViewData["Title"] = "Gelibolu İsdihdam";
    Layout = "~/Areas/Employer/Views/Shared/Layout/register.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4 text-primary">Firma Üyelik Formu</h2>
            <!-- Stepper -->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="step1-tab" data-toggle="tab" href="#step1" role="tab">
                        Firma
                        Bilgileri
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="step2-tab" data-toggle="tab" href="#step2" role="tab">
                        İletişim
                        Bilgileri
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="step3-tab" data-toggle="tab" href="#step3" role="tab">
                        Güvenlik
                        Ayarları
                    </a>
                </li>
            </ul>
            <form name="register-form" method="post" action="/employer/account/create">
                <!-- Form Steps -->
                <div class="tab-content mt-1" id="myTabContent">
                    <!-- Step 1 -->
                    <div class="tab-pane fade show active" id="step1" role="tabpanel">
                        <div class="p-4">
                            <div class="form-group">
                                <label>Firma Adı</label>
                                <input type="text" class="form-control" name="companyTitle" maxlength="150" required>
                            </div>
                            <div class="form-group">
                                <label>Firma Türü</label>
                                <select class="form-control" name="companyType" required>
                                    <option>Şahıs Şirketi</option>
                                    <option>Anonim Şirket</option>
                                    <option>Limited Şirket</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Vergi Numarası</label>
                                <input type="text" class="form-control" name="taxNumber" pattern="\d*" maxlength="11" required>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-primary next-step">
                                    Devam Et <i class="fas fa-arrow-right"></i>
                                </button>
                            </div>
                            <div class="alert alert-danger mt-3 validation-message" style="display: none;"></div>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="tab-pane fade" id="step2" role="tabpanel">
                        <div class="p-4">
                            <div class="highlight-section">
                                <div class="form-group">
                                    <label>Telefon Numarası</label>
                                    <input type="tel" class="form-control phone-mask" name="phoneNumber" placeholder="0 (5__) ___ ____"
                                           required>
                                </div>
                                <div class="form-group">
                                    <label>E-posta Adresi</label>
                                    <input type="email" class="form-control" name="e-mail" maxlength="100" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Firma Adresi</label>
                                <input type="text" class="form-control" name="companyAddress" maxlength="250" required>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Şehir</label>
                                        <select class="form-control" name="city" id="city" required>
                                            <option value="">Şehir Seçiniz</option>
                                            @foreach (var il in Model.Provinces)
                                            {
                                                <option value="@il.ID">@il.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>İlçe</label>
                                        <select class="form-control" name="district" id="district" required>
                                            <option value="">Önce Şehir Seçiniz</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Posta Kodu</label>
                                        <input type="text" class="form-control" name="postalCode" maxlength="5" required>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-secondary prev-step"><i class="fas fa-arrow-left"></i> Geri</button>
                            <button class="btn btn-primary float-right next-step">
                                Devam Et <i class="fas fa-arrow-right"></i>
                            </button>
                            <div class="alert alert-danger mt-3 validation-message" style="display: none;"></div>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="tab-pane fade" id="step3" role="tabpanel">
                        <div class="p-4">
                            <div class="highlight-section">
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control password-input" name="password" maxlength="50" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text toggle-password">
                                                <i class="fas fa-eye"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="password-strength">
                                        <div class="password-strength-bar"></div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Şifre Tekrarı</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control password-confirm" name="r-password" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text toggle-password">
                                                <i class="fas fa-eye"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <small class="text-danger password-match-alert"></small>
                                </div>

                                <div class="password-rules">
                                    <h6>Şifre Kuralları:</h6>
                                    <ul>
                                        <li data-rule="length">Minimum 8 karakter</li>
                                        <li data-rule="uppercase">Büyük harf içermeli</li>
                                        <li data-rule="lowercase">Küçük harf içermeli</li>
                                        <li data-rule="number">Sayı içermeli</li>
                                        <li data-rule="special">Özel karakter içermeli</li>
                                    </ul>
                                </div>
                            </div>

                            <button class="btn btn-secondary prev-step"><i class="fas fa-arrow-left"></i> Geri</button>
                            <button class="btn btn-success btn-submit float-right">Üye Ol <i class="fas fa-check"></i></button>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Tek bir alert div'i yeterli -->
            <div id="alert-message" class="alert mt-2" style="display:none;"></div>
        </div>
        <div class="container mt-4 mb-5">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <a href="#" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Üye Olmaktan Vazgeç
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>